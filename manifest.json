{
  "manifest_version": 3,
  "name": "Timestamp Button for YouTube Comments",
  "description": "Quickly add timestamps to comments in YouTube videos",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
